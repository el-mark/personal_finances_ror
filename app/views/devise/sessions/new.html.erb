<h1 class="h3 mb-3 fw-normal">Ingresar</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "name@example.com" %>
    <%= f.label :email %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    <%= f.label :password %>
  </div>

  <div class="form-check text-start my-3">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "Recodar mi cuenta", class: "form-check-label" %>
    <% end %>
  </div>

  <div class="actions mt-1 mb-1">
    <%= f.submit "Ingresar", class: "btn btn-primary w-100 py-2 mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
